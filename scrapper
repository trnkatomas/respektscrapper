    book.add_item(cov)
    """

if __name__ == '__main__':

    if not ( ( args.login_name and args.password ) or args.enlist ):
        parser.print_help()
        sys.exit()

    issue = Issue()
    issue.parse_content()
    issue.make_epub()

    issue.driver.quit()
